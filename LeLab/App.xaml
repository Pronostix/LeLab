<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeLab.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">
                <Setter Property="BarBackgroundColor" Value="White"/>
                <Setter Property="BarTextColor" Value="#4e89a3"/>
                <Setter Property="BackgroundColor" Value="White" />
            </Style>
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="White" />
            </Style>
            <!--Style Button-->
            <Style x:Key="boutonLabStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#518faa" />
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
        <ResourceDictionary>
            <Color x:Key="backgroundColor">#f4c723</Color>
            <Color x:Key="titleColor">#60593b</Color>
            <Color x:Key="shadowColor">#dcb51a</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>