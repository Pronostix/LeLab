<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeLab.Views.MagicNumber.WinPage"
             BackgroundColor="{StaticResource backgroundColor}" >
    <ContentPage.Content>
        <StackLayout x:Name="layoutMain" Spacing="0" Orientation="Vertical" VerticalOptions="Center">
            <Image Source="win.png" HeightRequest="200"/>
            <Label Text="Bravo !" FontSize="80" HorizontalOptions="Center" TextColor="{StaticResource titleColor}"/>
            <Label x:Name="resultText" FontSize="25" HorizontalOptions="Center" TextColor="{StaticResource titleColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>